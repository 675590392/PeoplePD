<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linear_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|bottom"
        android:layout_marginBottom="@dimen/space_5"
        android:background="@drawable/login_background"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="248dip"
            android:layout_height="wrap_content"
            android:background="@color/white"

            android:orientation="vertical">
            <LinearLayout
                android:layout_width="248dip"
                android:layout_height="50dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="19dip"
                    android:layout_height="19dip"
                    android:layout_marginLeft="@dimen/space_5"
                    android:src="@drawable/login_username" />

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="55dip"
                    android:layout_marginLeft="15dip"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:maxLength="15"
                    android:text="user02"
                    android:textSize="14sp" />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginBottom="5dp"
                android:background="#DADADA" />
            <LinearLayout
                android:layout_width="248dip"
                android:layout_height="50dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="19dip"
                    android:layout_height="19dip"
                    android:layout_marginLeft="@dimen/space_5"
                    android:src="@drawable/login_password" />
                ;

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:layout_marginLeft="15dip"
                    android:background="@null"
                    android:digits="=-_''abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
                    android:gravity="center_vertical"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:maxLength="20"
                    android:text="user02"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="251dip"
            android:layout_height="40dip"
            android:layout_marginTop="30dip"
            android:background="@drawable/btn_login"
            android:textColor="@color/white"
            android:textSize="15sp" />
        <Button
            android:id="@+id/btn_operation"
            android:layout_width="251dip"
            android:layout_height="40dip"
            android:layout_marginTop="30dip"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center|bottom"
            android:text="操作手册"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>
