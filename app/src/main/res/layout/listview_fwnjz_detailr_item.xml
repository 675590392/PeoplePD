<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:textColor="@color/black"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal" >
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/placeHolder"
        android:layout_margin="0dp"
        android:columnCount="6"
        android:columnWidth="30dp"
        android:numColumns="auto_fit"
        android:padding="0dp"
        android:paddingEnd="0dp"
        android:paddingStart="0dp"
        android:rowCount="5"
        android:useDefaultMargins="false"
        android:layout_weight="1">
        <TextView
            style="@style/IDLabelStyle"
            android:layout_columnSpan="1"
            android:text="姓名" />
        <TextView
            android:id="@+id/tv_name_residential"
            style="@style/IDTextStyle"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal" />
        <ImageView
            android:id="@+id/iv_photo_residential"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:layout_rowSpan="4" />
        <TextView
            style="@style/IDLabelStyle"
            android:layout_columnSpan="1"
            android:text="性别" />
        <TextView
            android:id="@+id/tv_sex_residential"
            style="@style/IDTextStyle"
            android:layout_columnSpan="1" />
        <TextView
            style="@style/IDLabelStyle"
            android:layout_columnSpan="1"
            android:text="民族" />
        <TextView
            android:id="@+id/tv_ehtnic_residential"
            style="@style/IDTextStyle"
            android:layout_columnSpan="1" />
        <TextView
            style="@style/IDLabelStyle"
            android:layout_columnSpan="1"
            android:text="出生" />
        <TextView
            android:id="@+id/tv_birthday_residential"
            style="@style/IDTextStyle"
            android:layout_width="wrap_content"
            android:layout_columnSpan="3" />
        <TextView
            style="@style/IDLabelStyle"
            android:layout_columnSpan="1"
            android:text="住址" />
        <TextView
            android:id="@+id/tv_address_residential"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal"
            android:textStyle="bold" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_columnSpan="2"
            android:text="公民身份证号码"
            android:textColor="#0099CC" />
        <TextView
            android:id="@+id/tv_number_residential"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_columnSpan="4"
            android:layout_gravity="fill_horizontal"
            android:textStyle="bold" />
        <TextView
            style="@style/IDLabelStyle"
            android:layout_width="100dp"
            android:layout_columnSpan="2"
            android:text="登记号" />
        <TextView
            android:id="@+id/tv_signed_residential"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_columnSpan="4"
            android:layout_gravity="fill_horizontal"
            android:textStyle="bold" />
    </GridLayout>
