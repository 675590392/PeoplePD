<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="800dp"
    android:background="#FFF5EE"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="3dip"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >
      <TextView
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:gravity="center"
          android:text="外来人员可受理业务查询"
          android:textColor="#000000"
          android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="3dip"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >
    <Button
        android:id="@+id/btn_select_readCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="NFC读取身份证"
        android:background="@drawable/bg_btn"
        android:layout_margin="@dimen/space_2"
        android:textColor="#000000"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_potho_readCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_2"
        android:layout_weight="1"
        android:gravity="center"
        android:text="拍照读取身份证"
        android:background="@drawable/bg_btn"
        android:textColor="#000000"
        android:textSize="20dp" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="5dip"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="姓名:"
            android:textColor="#000000"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/select_Chname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.94"
            android:background="@android:color/transparent"
            android:gravity="right|center"
            android:hint="从身份证读取"
            android:textColorHint="@color/Top_gray"
            android:textColor="@color/black"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F3F3F3" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dip"
        android:layout_marginTop="5dip"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="身份证号:"
            android:textColor="#000000"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/select_Chidcard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:gravity="right|center"
            android:hint="从身份证读取"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/Top_gray"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="18dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="3dip"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:layout_margin="20dp"
        android:paddingRight="20dp" >
        <Button
            android:id="@+id/btn_cancal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:background="@drawable/bg_btn_login"
            android:layout_margin="@dimen/space_2"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_criturm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_2"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:background="@drawable/bg_btn_login"
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>